<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llmy"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/dp_5"

                    android:orientation="horizontal">

                   <!-- <TextView
                        android:id="@+id/tvTimeDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_gravity="center_vertical"
                        android:text="12:05 Pm \n 12 Aug 2020"
                        android:padding="@dimen/dp_3"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_12" />
-->


                    <LinearLayout
                        android:background="@drawable/creamebg1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_12"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_7">



                        <TextView
                            android:padding="@dimen/dp_10"
                            android:id="@+id/tvMessage"
                            android:text="Example message from employer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOther"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/dp_25"

                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5">


                    <LinearLayout
                        android:background="@drawable/anotherchatbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_7">



                        <TextView
                            android:id="@+id/tvOtherMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14"
                            android:padding="@dimen/dp_10"
                            android:text="Example message from Job seeker"
                            android:visibility="visible" />
                    </LinearLayout>

                  <!--  <TextView
                        android:id="@+id/tvOtherTimeDate"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_3"
                        android:text="12:10 pm \n12 aug 2020"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_12" />-->
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>